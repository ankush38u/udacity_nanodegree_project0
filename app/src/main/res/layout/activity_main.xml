<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.paprbit.udacious.MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center|top"
        android:text="My Nanodegree Apps"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatButton
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/btn_selector"
            android:padding="12dp"
            android:text="Spotify Streamer"
            android:id="@+id/tv_spotify"
            android:textColor="@drawable/text_selector" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/tv_scoresapp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/btn_selector"
            android:padding="12dp"
            android:text="Scores App"
            android:textColor="@drawable/text_selector" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/tv_libraryapp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/btn_selector"
            android:padding="12dp"
            android:text="Library App"
            android:textColor="@drawable/text_selector" />


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/tv_build_it_bigger"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/btn_selector"
            android:padding="12dp"
            android:text="Build It Bigger"
            android:textColor="@drawable/text_selector" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/tv_xyz_reader"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/btn_selector"
            android:padding="12dp"
            android:text="XYZ Reader"
            android:textColor="@drawable/text_selector" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/tv_capstone"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/btn_selector"
            android:padding="12dp"
            android:text="Capstone"
            android:textColor="@drawable/text_selector" />
    </LinearLayout>
</RelativeLayout>
